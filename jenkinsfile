pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'cargo build'
            }
        }

        stage('Test') {
            steps {
                sh 'cargo test'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'docker build -t rust-ci-demo:latest .'
            }
        }
    }
}
